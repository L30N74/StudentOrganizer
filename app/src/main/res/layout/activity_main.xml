<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".View.MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="346dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/main_ChooseGroup"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrl_groups"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/layout_groupNames"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_groupA"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="8dp"
                android:text="Gruppe A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <Button
                android:id="@+id/btn_groupB"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="8dp"
                android:text="Gruppe B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_groupA" />

            <Button
                android:id="@+id/btn_groupC"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="8dp"
                android:text="Gruppe C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_groupB" />

            <Button
                android:id="@+id/btn_groupD"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="8dp"
                android:text="Gruppe D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_groupC" />

        </LinearLayout>
    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--<com.github.clans.fab.FloatingActionButton-->
            <!--android:id="@+id/btn_addGroup"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--android:layout_margin="@dimen/fab_margin"-->
            <!--android:src="@drawable/baseline_note_add_black_36dp"-->
            <!--fab:fab_label="Neue Gruppe hinzufügen" />-->

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_readExcelFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/baseline_visibility_black_36dp"
            fab:fab_label="Studenten aus Datei lesen" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_saveToExcelFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/baseline_print_black_36dp"
            fab:fab_label="Studenten exportieren" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_resetDatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/baseline_delete_forever_black_36dp"
            fab:fab_label="Alle Gruppen zurücksetzen (löschen)" />
    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>