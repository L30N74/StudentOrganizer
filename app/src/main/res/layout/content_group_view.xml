<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.GroupViewActivity"
    tools:showIn="@layout/activity_group_view">

    <CheckBox
        android:id="@+id/chck_showFailed"
        android:layout_width="331dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Zeige durchgefallene Studenten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_groupName" />

    <ScrollView
        android:id="@+id/scrl_students"
        android:layout_width="345dp"
        android:layout_height="490dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_groupName">

        <LinearLayout
            android:id="@+id/layout_students"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_groupName"
        android:layout_width="281dp"
        android:layout_height="57dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/aldrich"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>