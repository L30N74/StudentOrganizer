<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hsduesseldorf.krueger.webprostudentorganizer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_custom_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.TaskAmountSetterActivity"
            android:label="@string/title_activity_task_amount_setter"
            android:parentActivityName=".View.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.MainActivity" />
        </activity>
        <activity
            android:name=".View.ChangeGroupActivity"
            android:label="@string/title_activity_change_group"
            android:parentActivityName=".View.TaskViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.TaskViewActivity" />
        </activity>
        <activity
            android:name=".View.ExcelImportActivity"
            android:label="@string/title_activity_excel_import"
            android:parentActivityName=".View.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.MainActivity" />
        </activity>
        <activity
            android:name=".View.TaskViewActivity"
            android:label="@string/title_activity_task_view"
            android:parentActivityName=".View.GroupViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.GroupViewActivity" />
        </activity>
        <activity
            android:name=".View.AddStudentActivity"
            android:label="@string/title_activity_add_student"
            android:parentActivityName=".View.GroupViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.GroupViewActivity" />
        </activity>
        <activity
            android:name=".View.GroupViewActivity"
            android:label="@string/title_activity_group_view"
            android:parentActivityName=".View.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.hsduesseldorf.krueger.webprostudentorganizer.View.MainActivity" />
        </activity>
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>